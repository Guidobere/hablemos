<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">

        <RelativeLayout
            android:id="@+id/relativep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- AGREGAR ALGO PARA EL REGISTRO -->
            <LinearLayout
                android:id="@+id/linearLayaut1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/registro"
                    android:tint="@color/white" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativep"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="200dp"
                tools:ignore="NotSibling">

                <ImageView
                    android:id="@+id/imageView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="3dp"
                    android:src="@drawable/nombreabuelo" />

                <EditText
                    android:id="@+id/txtAbuelo"
                    android:layout_width="238dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/imageView_userIcon"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@id/imageView_userIcon"
                    android:background="@color/editTextColor"
                    android:hint="Nombre Abuelo"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView_passIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="3dp"
                    android:src="@drawable/sobre" />

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_passIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_passIcon"
                    android:background="@color/editTextColor"
                    android:hint="Email del tutor"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView_passIcon2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="3dp"
                    android:src="@drawable/candado" />

                <EditText
                    android:id="@+id/txtContra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_passIcon2"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_passIcon2"
                    android:background="@color/editTextColor"
                    android:hint="Contraseña tutor"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView_passIcon3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="3dp"
                    android:src="@drawable/futbol" />

                <EditText
                    android:id="@+id/txtEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_passIcon3"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_passIcon3"
                    android:background="@color/editTextColor"
                    android:hint="Equipo futbol"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

