                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView_passIcon4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="3dp"
                    android:src="@drawable/medicamento" />

                <EditText
                    android:id="@+id/txtmañana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_passIcon4"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_passIcon4"
                    android:background="@color/editTextColor"
                    android:hint="Medicamentos Turno Mañana"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative5"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView_passIcon5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="3dp"
                    android:src="@drawable/medicamento" />

                <EditText
                    android:id="@+id/txttarde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_passIcon5"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_passIcon5"
